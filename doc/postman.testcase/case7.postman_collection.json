					"raw": "{\r\n    \"currencyCode\": \"{{currencyCode}}\",\r\n    \"originDestinations\": [\r\n        {\r\n            \"id\": \"1\",\r\n            \"originLocationCode\": \"{{originLocationCode}}\",\r\n            \"destinationLocationCode\": \"{{destinationLocationCode}}\",\r\n            \"departureDateTimeRange\": {\r\n                \"date\": \"{{departureDate}}\",\r\n                \"dateWindow\": \"{{dateWindow}}\"\r\n            }\r\n        },\r\n        {\r\n            \"id\": \"2\",\r\n            \"originLocationCode\": \"{{destinationLocationCode}}\",\r\n            \"destinationLocationCode\": \"{{originLocationCode}}\",\r\n            \"departureDateTimeRange\": {\r\n                \"date\": \"{{returnDate}}\",\r\n                \"dateWindow\": \"{{dateWindow}}\"\r\n            }\r\n        }\r\n    ],\r\n    \"travelers\": [\r\n        {\r\n            \"id\": \"1\",\r\n            \"travelerType\": \"ADULT\",\r\n            \"fareOptions\": [\r\n                \"STANDARD\"\r\n            ]\r\n        },\r\n        {\r\n            \"id\": \"2\",\r\n            \"travelerType\": \"ADULT\",\r\n            \"fareOptions\": [\r\n                \"STANDARD\"\r\n            ]\r\n        },\r\n        {\r\n            \"id\": \"3\",\r\n            \"travelerType\": \"CHILD\",\r\n            \"fareOptions\": [\r\n                \"STANDARD\"\r\n            ]\r\n        },\r\n        {\r\n            \"id\": \"4\",\r\n            \"travelerType\": \"HELD_INFANT\",\r\n            \"fareOptions\": [\r\n                \"STANDARD\"\r\n            ],\r\n            \"associatedAdultId\": \"1\"\r\n        }\r\n    ],\r\n    \"sources\": [\r\n        \"GDS\"\r\n    ],\r\n    \"searchCriteria\": {\r\n        \"maxFlightOffers\": 1,\r\n        \"pricingOptions\": {\r\n            \"fareType\": [\r\n                \"PUBLISHED\"\r\n            ],\r\n            \"includedCheckedBagsOnly\": false\r\n        },\r\n        \"additionalInformation\": {\r\n            \"chargeableCheckedBags\": false,\r\n            \"brandedFares\": true\r\n        }\r\n    }\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{API_URL}}/v2/shopping/flight-offers",
