							"var choose_offer;\r",
							"postman.setEnvironmentVariable(\"offer_id\", offer_id)\r",
							"var jsonData = JSON.parse(postman.getEnvironmentVariable(\"search_responseBody\"));\r",
							"for (var i = 0; i < jsonData.data.length; i++) {\r",
							"    var data = jsonData.data[i];\r",
							"    console.log(data.id);\r",
							"    if(data.id == offer_id){\r",
							"        choose_offer = data;\r",
							"    }\r",
							"}\r",
							"\r",
							"//FlightOffer to price\r",
							"postman.setEnvironmentVariable(\"price_flightOffer\", JSON.stringify(choose_offer));"
						],
